<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zoo_chance_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_rect"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chance1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chanse1_img"
            android:layout_width="118dp"
            android:layout_height="131dp"
            android:background="#605271"
            android:src="@drawable/Facts_ideas" />

        <TextView
            android:id="@+id/chance1_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#605271"
            android:padding="5dp"
            android:text="A zoologist studies animals: how they are organized, where they live, what they eat, how they interact with each other and with people..."
            android:textColor="#9f90af" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chance2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chanse2_img"
            android:layout_width="118dp"
            android:layout_height="131dp"
            android:src="@drawable/people" />

        <TextView
            android:id="@+id/chance2_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#605271"
            android:padding="5dp"
            android:text="Lets see the different kittens from a scientific point of view..."
            android:textColor="#9f90af" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chance3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chanse3_img"
            android:layout_width="118dp"
            android:layout_height="131dp"
            android:src="@drawable/youtube" />

        <TextView
            android:id="@+id/chance3_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="#605271"
            android:padding="5dp"
            android:text="Rhinoceroses and owls..."
            android:textColor="#9f90af" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chance4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chanse3_img2"
            android:layout_width="118dp"
            android:layout_height="131dp"
            android:background="#605271"
            android:src="@drawable/ar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#605271"
                android:padding="5dp"
                android:text="Feeding rhino"
                android:textColor="#9f90af"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/chance3_textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#605271"
                android:padding="5dp"
                android:text="Let's take a closer look at the rhinoceros from all sides..."
                android:textColor="#9f90af" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chanse2_img4"
            android:layout_width="118dp"
            android:layout_height="131dp"
            android:src="@drawable/people" />

        <LinearLayout
            android:id="@+id/chance5_texts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chance5_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#605271"
                android:padding="5dp"
                android:text="Famous zoologists"
                android:textColor="#9f90af"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

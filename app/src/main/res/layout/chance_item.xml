<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_rect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chance_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_sixth"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_sixth"
            tools:srcCompat="@drawable/ic_sixth" />

        <TextView
            android:id="@+id/chance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding='10dp'
            android:text="Which animals have' disappeared throughout history? Was humanity  having an impact on species?"
            android:textColor="#9b92b3" />
    </LinearLayout>
</FrameLayout>
